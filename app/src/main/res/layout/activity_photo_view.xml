<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_FFFFFF"
    tools:context="com.pandaq.pandaeye.modules.webphto.mvp.PhotoViewActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_html_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/trans_toolbar_7c424141"
        app:layout_collapseMode="pin"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="@dimen/toolbar_title_width"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="1"
            android:singleLine="true"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/text_size_big"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/trans_toolbar_7c424141">

        <TextView
            android:id="@+id/tv_photo_process"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:gravity="center"
            android:textColor="@color/white_FFFFFF"
            tools:text="2/4"/>

        <ImageView
            android:id="@+id/iv_save_pic"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:scaleType="centerInside"
            android:src="@drawable/ic_file_download"/>
    </RelativeLayout>
</RelativeLayout>
