<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pandaq.pandaeye">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.base.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.zhihu.ZhihuStoryInfoActivity"
            android:label="@string/title_activity_zhihu_story_info"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.news.TopNewsInfoActivity"
            android:label="@string/title_activity_top_news_info"
            android:theme="@style/AppTheme">
        </activity>

        <meta-data
            android:name="com.pandaq.pandaqlib.glide.CustomGlideMoudle"
            android:value="GlideModule"/>
    </application>

</manifest>